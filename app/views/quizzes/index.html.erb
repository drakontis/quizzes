<div class="container">
  <div class="row">

    <div class="col-lg-12">
      <h3>Quizzes</h3>

      <table class="table table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Taken</th>
        </tr>
        </thead>

        <tbody>
        <% @quizzes.each_with_index do |quiz, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= quiz.title %></td>
              <td><%= "#{current_user.taken_quizzes_for_quiz(quiz).count} times" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
  <!-- /.row -->

</div>
<!-- /.container -->
